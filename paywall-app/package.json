{
  "name": "@unlock-protocol/paywall-app",
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "yarn build:cdn && yarn build:next",
    "build:next": "next build src",
    "build:cdn": "yarn vite build",
    "deploy": "yarn run build && next export src -o out",
    "deploy-netlify": "./scripts/deploy-netlify.sh",
    "deploy-fleek": "./scripts/deploy-fleek.sh",
    "start": "next start",
    "test": "echo 'no tests'",
    "lint": "eslint --resolve-plugins-relative-to ../packages/eslint-config --ext .tsx,.ts,.js src/",
    "ci": "yarn test && yarn lint && yarn build"
  },
  "dependencies": {
    "@types/next": "8.0.7",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@unlock-protocol/paywall": "workspace:./packages/paywall",
    "copy-webpack-plugin": "11.0.0",
    "next": "13.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.21.0",
    "@unlock-protocol/eslint-config": "workspace:./packages/eslint-config",
    "@unlock-protocol/tsconfig": "workspace:./packages/tsconfig",
    "babel-loader": "9.1.2",
    "eslint": "8.35.0",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "typescript": "4.9.5",
    "vite": "4.1.3",
    "vitest": "0.29.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}
